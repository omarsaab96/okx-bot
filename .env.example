# OKX API (create a DEMO trading API key in OKX Demo Trading center)
OKX_BASE_URL=https://www.okx.com
OKX_API_KEY=your_key
OKX_API_SECRET=your_secret
OKX_API_PASSPHRASE=your_passphrase

# Demo: 1, Live: 0
OKX_SIMULATED=1

# Bot settings
BOT_MARKET_TYPE=SWAP         # SPOT | SWAP
BOT_INST_ID=BTC-USDT-SWAP    # SPOT: BTC-USDT | SWAP: BTC-USDT-SWAP
BOT_MODE=DEMO_SPOT           # DEMO_SPOT | LIVE_SPOT (label only)
MGN_MODE=cross               # cross | isolated (SWAP only)
POSITION_MODE=net            # net | hedge (SWAP only)
LEVERAGE=1
BOT_AUTO_START=1             # 1 = trade immediately, 0 = start paused
POLL_SECONDS=30

# Risk controls (spot)
RISK_PER_TRADE=0.005         # 0.5% of USDT balance
MAX_POSITION_PCT=0.01        # 1% of USDT balance (position notional cap)
TRADE_BUDGET_USDT=0          # 0 = use full balance; >0 = cap trades to this USDT budget
MAX_DAILY_LOSS=0.01          # 1% of start-of-day USDT balance (soft halt until next day)
LOSS_STREAK=3                # consecutive losses to trigger cooldown
LOSS_COOLDOWN_MINUTES=120    # cooldown duration after LOSS_STREAK losses

# Strategy (Multi-signal)
TREND_EMA=200
TREND_MIN_PCT=0.0005
ENTRY_TIMEFRAME=15m
TREND_TIMEFRAME=1H
ATR_LEN=14
SL_ATR_MULT=1.5
TP_R_MULT=2.0
TP_R_MULT_BREAKOUT=2.0
TP_R_MULT_PULLBACK=1.6
TP_R_MULT_MOMENTUM=1.4
TP_R_MULT_MEAN_REV=1.0
PULLBACK_EMA_LEN=20
MOMENTUM_EMA_FAST=9
MOMENTUM_EMA_SLOW=21
RSI_LEN=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
BB_LEN=20
BB_STD=2

# Safety
MIN_USDT_BALANCE=10

# Dashboard
DASHBOARD_PORT=8787
